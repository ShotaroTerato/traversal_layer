<?xml version="1.0"?>

<launch>

  <node pkg="traversal_layer" type="image_publisher" name="image_publisher"/>
  <rosparam command="load" file="$(find traversal_layer)/config/image_to_gridmap.yaml" />
  <node pkg="traversal_layer" type="image_to_gridmap" name="image_to_gridmap" output="screen" />
  <!-- Launch the grid map visualizer -->
  <node pkg="grid_map_visualization" type="grid_map_visualization" name="grid_map_visualization" output="screen" />

  <node pkg="traversal_layer" type="traversal_filter" name="traversal_filter"/>

  <node pkg="octomap_server" type="octomap_server_node" name="octomap" output="screen">
    <param name="resolution" value="0.1"/>
    <param name="frame_id" value="/map"/>
    <param name="base_frame_id" value="/base_link"/>
    <remap from="/cloud_in" to="/untraversal_cloud"/>
    <remap from="/projected_map" to="/map_for_costmap"/>
  </node>
</launch>
